<h1>Editing Book</h1>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
<!-- エラー文 -->
<% if @book.errors.any? %>
  <div>
    <span><%= @book.errors.count %> errors prohibited this book from being saved:</span>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
