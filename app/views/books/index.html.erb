<p id="notice">
</p>
<h1>Books</h1>
<table>
	<thead>

		<th>Title</</th>
		<th>Body</th>
		<th colspan="3"></th>

	</thead>

	<tbody>
	<% @books.each do |list| %>
	<tr>
	<td><%= list.title %></td>
	<td><%= list.body %></td>
	<td><%= link_to "Show", book_path(list.id) %></td>
	<td><%= link_to "Edit", edit_book_path(list.id) %></td>
	<td><%= link_to "Destroy", book_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
	</tr>
	<% end %>
	</tbody>
</table>

<h2>New book</h2>
<!-- エラー文 -->
<% if @book.errors.any? %>
  <div>
  	<span><%= @book.errors.count %> errors prohibited this book from being saved:</span>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	<%= form_for(@book, url: '/books') do |f| %>

  	<div>Tiitle</div>
  	<%= f.text_field :title %>

  	<div>Body</div>
  	<%= f.text_area :body %>
  	<div>
  	<%= f.submit 'Create Book' %>
  </div>
<% end %>

	</div>
</form>


